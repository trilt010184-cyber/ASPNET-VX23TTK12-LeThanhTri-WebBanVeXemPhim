@model dailyphongve.Models.viewmodels.vesListViewModel
@*<p>
    <a asp-action="created" class="btn btn-sm  btn-success   text-uppercase"><i class="fas fa-plus-circle"></i> thêm vé</a>
</p>*@

<div class="row">
    @if (Model?.ves != null && Model.ves.Any())
    {
        foreach (var Ve in Model.ves)
        {
        
            <div class="col-md-4 col-xs-6 border-primary mb-3">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <div style="color: darkslateblue" class="card-header text-black bg-warning">
                                <p class="card-text">
                                    <h5 class="card-title">
                                        @Ve.Title
                                    </h5>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <img src="@Ve.ProfilePicture" asp-append-version="true" width="100%" height="300" />
                        </div>
                        <div class="col-md-12">
                            <div style="color:darkslateblue" class="card-body alert-success">
                                <p class="card-text"><b>tên vé </b>@Ve.Title</p>
                                <p class="card-text"><b>thời gian </b>@Ve.time</p>
                                <p class="card-text"><b>thời lượng </b>@Ve.Period</p>
                                <p class="card-text"><b>Loại vé </b>@Ve.Genre</p>
                                <p class="card-text"><b>giá vé </b>@Ve.Price</p>
                                @*<p>
                                    <a asp-action="Delete" asp-route-id="@Ve.veID">Delete</a>
                                </p>*@
                                <p>
                                    <partial name="veTemplate" model="Ve" />
                                </p>
                            </div>
                        </div>
                        @*<div class="col-md-12">
                                <div class="card-footer ">
                                    <p class="card-text">
                                        <a class="btn btn-secondary float-right" asp-action="UserDetails" asp-route-id="@item.Id">
                                            <i class="bi bi-eye-fill"></i> Xem thông tin
                                        </a>

                                    </p>
                                </div>
                            </div>*@
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>Không có vé nào được hiển thị.</p>
    }
</div>
<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" page-url-genre="@Model.CurrentGenre"
     class="btn-group pull-right m-1">

</div>
