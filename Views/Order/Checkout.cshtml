@model Order
<p>Vui lòng nhập thông tin của bạn:</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
<h3>Vận chuyển đến </h3>
<div class="form-group">
<label>Họ và Tên:</label><input asp-for="Name" class="form-control" />
</div>
<h3>Địa chỉ </h3>
<div class="form-group">
<label>Xã, Phường ,Thị trấn:</label><input asp-for="Line1" class="form-control" />
</div>
<div class="form-group">
<label>Quận,Huyện:</label><input asp-for="Line2" class="form-control" />
</div>
<div class="form-group">
<label>Tỉnh ,Thành phố:</label><input asp-for="City" class="form-control" /></div>
<div class="form-group">
<label>Số điện thoại :</label><input asp-for="State" class="form-control" />
</div>
<div class="form-group">
<label>Loại giao hàng (Nhanh/tiết kiệm/hỏa tốc ):</label><input asp-for="Zip" class="form-control" />
</div>
<div class="form-group">
<label>Quốc gia:</label><input asp-for="Country" class="form-control" />
</div>
<div class="text-center">
<input class="btn btn-primary" type="submit" value="Xác nhận " />
</div>
</form>